<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui">
<ui:composition template="WEB-INF/templates/MasterPage.xhtml">
	<ui:define name="title">Query Procedure</ui:define>
	<ui:define name="content">
		<h:form id="queryProcedure">
			<br />
			<table width="90%" align="center">
				<tr>
				<ui:repeat var="page" value="QueryDatabase.xhtml">
					<td align="left"><p:commandButton value="Back" style="background-color:#A1CAF1;" action="#{pageLogBean.logger(page)}" ajax="false"></p:commandButton></td>
				</ui:repeat>						
				<td align="right"><p:commandButton value="Log Out" style="background-color:#FFBF00;"
							action="#{loginBean.logOut()}" ajax="false"></p:commandButton></td>
				</tr>
				<tr>
					<td width="90%" align="center" colspan="2">
						<br />
						<p:dataTable var="p" paginator="true" rows="25"  
                 paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  
                 rowsPerPageTemplate="25,50,100,#{queryBean.surBiopsyModelList.size()}"
				value="#{queryBean.surBiopsyModelList}" filteredValue="#{queryBean.filteredSurBiopsyReport}">
				
				<p:column filterStyle="width:95%;" filterBy="#{p.mrn}" headerText="MRN" width="8%" styleClass="wrap">
					<h:outputText value="#{p.mrn}" />
				</p:column>

				<p:column filterStyle="width:95%;" filterBy="#{p.name}" headerText="Name (Last, First)" width="8%" styleClass="wrap">
					<h:outputText value="#{p.name}" />
				</p:column>

				<p:column filterStyle="width:95%;" filterBy="#{p.scheduleDate}" headerText="Schedule Date" width="8%" styleClass="wrap">
					<h:outputText  value="#{p.scheduleDate}">
						<f:convertDateTime type="date" pattern="yyyy-MM-dd"/>
					</h:outputText>
				</p:column>

				<p:column filterStyle="width:95%;" filterBy="#{p.procedureDate}" headerText="Procedure Date" width="8%" styleClass="wrap">
					<h:outputText value="#{p.procedureDate}">
						<f:convertDateTime type="date" pattern="yyyy-MM-dd"/>
					</h:outputText>
				</p:column>
				
				<p:column filterStyle="width:95%;" filterBy="#{p.performedBy}" headerText="Performed By" width="8%" styleClass="wrap">
					<h:outputText value="#{p.performedBy}"></h:outputText>
				</p:column>
				
				<p:column filterStyle="width:95%;" filterBy="#{p.procedureName}" headerText="Procedure Name" width="8%" styleClass="wrap">
					<h:outputText value="#{p.procedureName}"></h:outputText>
				</p:column>
				
				
				<p:column filterStyle="width:95%;" filterBy="#{p.biopsyResult}" headerText="Result" width="8%" styleClass="wrap">
					<h:outputText value="#{p.biopsyResult}"></h:outputText>
				</p:column>
				
				<p:column filterStyle="width:95%;" filterBy="#{p.diagnostic}" headerText="Diagnostic" width="8%" styleClass="wrap">
					<h:outputText value="#{p.diagnostic}"></h:outputText>
				</p:column>
				
				<p:column headerText="Comment" width="18%" styleClass="wrap">
					<h:outputText value="#{p.comment}"></h:outputText>
				</p:column>
				<p:column width="8%" styleClass="wrap">
					<p:commandButton type="submit" ajax="false" value="Update"
					  action="#{mainMenuBean.surBiopsy()}" actionListener="#{mainMenuBean.setSearchedPatient(p.name)}"></p:commandButton>
				</p:column>
				
						</p:dataTable>
					</td>
				</tr>
			</table>
		</h:form>
	</ui:define>
</ui:composition>
</html>